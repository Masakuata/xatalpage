<!-- Portfolio  -->
<section id="portfolio" class="container">
  <h2 class="section-title">Proyectos que hemos realizado</h2>
  <ul class="responsive-3-grid">
    {% for client in collections.cliente %}
      {% if client.data.best %}
        <li class="project" data-aos="flip-left" data-aos-duration="450" data-aos-easing="linear">
          <a href="{{client.url}}">
            <div class="project-wrapper">
              <img src="{{client.data.thumbnail}}" alt="Captura de pantalla de sitio web de Vintage Rock Band" class="img-fluid">
            </div>
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</section>

